-- [BRAINROT MODE] Fake Inventory Dupe - Hanya Visual, Aman!
-- Simpan di StarterPlayerScripts

local player = game.Players.LocalPlayer
local backpack = player:WaitForChild("Backpack")

-- Fungsi untuk buat salinan visual
local function createFakeDupe(originalTool)
    if not originalTool or not originalTool:IsA("Tool") then return end

    -- Clone tool (hanya untuk tampilan lokal)
    local fake = originalTool:Clone()
    fake.Name = "FAKE_DUPE_" .. originalTool.Name
    fake.Transparency = 0.5 -- Agar terlihat "palsu"
    
    -- Tambahkan label lucu (opsional)
    if fake:FindFirstChild("Handle") then
        local surfaceGui = Instance.new("SurfaceGui")
        surfaceGui.Face = Enum.NormalId.Top
        surfaceGui.Adornee = fake.Handle
        surfaceGui.AlwaysOnTop = true
        
        local textLabel = Instance.new("TextLabel")
        textLabel.Size = UDim2.new(1, 0, 0.2, 0)
        textLabel.Position = UDim2.new(0, 0, 0.4, 0)
        textLabel.BackgroundTransparency = 1
        textLabel.Text = "DUPE!"
        textLabel.TextColor3 = Color3.fromRGB(255, 50, 50)
        textLabel.TextScaled = true
        textLabel.Font = Enum.Font.GothamBold
        textLabel.Parent = surfaceGui
        surfaceGui.Parent = fake.Handle
    end

    fake.Parent = backpack
    print("ðŸ§  [BRAINROT] Fake dupe dibuat: " .. originalTool.Name)

    -- Hapus otomatis setelah 5 detik biar nggak lag
    spawn(function()
        wait(5)
        if fake and fake.Parent then
            fake:Destroy()
        end
    end)
end

-- Deteksi saat ada tool masuk ke backpack
backpack.ChildAdded:Connect(function(child)
    if child:IsA("Tool") then
        wait(0.2) -- Jeda kecil agar aman
        createFakeDupe(child)
    end
end)

-- Juga cek tool yang sudah ada saat pertama kali join
for _, tool in ipairs(backpack:GetChildren()) do
    if tool:IsA("Tool") then
        createFakeDupe(tool)
    end
end

print("âœ… Fake Dupe Visual aktif! (Hanya kamu yang lihat)")
